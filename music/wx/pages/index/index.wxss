/* pages/index/index.wxss */
/* 轮播模块 */
.box{
  width: 95%;
  margin: 5rpx auto;
}
.swiperbox{
  width: 100%;
  height: 300rpx;
}
.swiperbox image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
/* 五个导航按钮 */
.navbox{
  display: flex;
  padding-top: 20rpx;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #f00;
  color: coral;
  font-size: 50rpx;
}
.navItem text{
  font-size: 26rpx;
}
/* 推介歌曲 */
.recommend-conyent{
  display: flex;
  justify-content: space-between;
}
.more{
  padding: 10rpx 20rpx;
  border: 2rpx solid #ccc;
  font-size: 20rpx;
  border-radius: 20rpx;
}
/* 推介内容区 */
.rec-content{
  display: flex;
  height: 280rpx;
}
.scrollItem{
  width: 200rpx;
  margin: 5rpx 10rpx;
  /* padding: 5rpx; */
  position: relative;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  display: block;
  font-size: 24rpx;
  /* 单号文本溢出 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行 */
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.scrollItem .re-count{
  display: flex;
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  color: #fff;
  font-size: 20rpx;
}
.icon-bofang4{
  line-height: 32rpx;
}
.scrollItem .scor-desc{
  font-size: 22rpx;
}
/* 排行榜 */
.bangSwiper{
  height: 400rpx;
}
.bang-title{
  padding-bottom: 10rpx;
}
.bangSwiper .bangItem{
  width: 90%;
  border-radius: 10rpx;
  padding: 10rpx;
  background-color: #fbfbfb;
}
.hotSong{
  display: flex;
  margin: 10rpx 0;
}
.hotSong>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.hotSong .bang-count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.hotSong .musicName{
  height: 100rpx;
  line-height: 100rpx;
  margin-left: 20rpx;

}


